{
    "articles": [
    {% for post in site.posts limit:100 %}
        {
            "permalink": "{{ post.permalink }}",
            "original": "{{ post.original }}"
            "title": {{ post.title | jsonify }},
            "image": "{{ post.image}}",
            "date": "{{ post.date }}",
            "domain": "{{ post.domain }}",
            "translations": {
                {% for translation in post.translations %}
                    "{{ translation }}": "{{ translation | append: post.url | absolute_url }}"{% if forloop.last == false %},{% endif %} {% endfor %}
            },
            "post": post
        }{% if forloop.last == false %},{% endif %}
    {% endfor %}
    ]
}
