[{% assign count = 1 %}
{% for post in site.posts %}{% if post.permalink and post.translations %}{% assign count = count | plus:1 %}
    {
        "permalink": "{{ post.permalink }}",
        "url": "{{ post.original }}",
        "domain": "{{ post.domain }}",
        "title": {{ post.title | jsonify }},
        "image": "{{ post.image}}",
        "date": "{{ post.date }}",
        "category": "{{ post.category }}",
        "languages": [
             {% for translation in post.translations %}"{{ translation }}"{% unless forloop.last %},{% endunless %}{% endfor %}
        ]
    }{% unless count > 200 %},{% else %}{% break %}{% endunless %}{% endfor %}
]
