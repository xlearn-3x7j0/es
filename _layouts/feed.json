{
    "articles": [{% assign counter = 1 %}
    {% for post in site.posts %}
        {% if post.permalink and post.translations %}{% assign counter=counter | plus:1 %}
        {
            "permalink": "{{ post.permalink }}",
            "original": "{{ post.original }}",
            "title": {{ post.title | jsonify }},
            "image": "{{ post.image}}",
            "date": "{{ post.date }}",
            "domain": "{{ post.domain }}",
            "translations": {
                {% for translation in post.translations %}"{{ translation }}": "{{ translation | append: post.url | absolute_url }}"{% if forloop.last == false %},{% endif %} {% endfor %}
            }
        }{% if counter > 200 %}{% break %}{% else %},{% endif %}{% endfor %}
    ]
}
