{
    {% assign categories = '' %}
    articles: [{% assign count = 1 %}
    {% for post in site.posts %}{% if post.permalink and post.translations %}{% assign count = count | plus:1 %}
        {
            "permalink": "{{ post.permalink }}",
            "url": "{{ post.original }}",
            "domain": "{{ post.domain }}",
            "title": {{ post.title | jsonify }},
            "image": "{{ post.image}}",
            "date": "{{ post.date }}",
            "category": "{{ post.category }}",
            "languages": [
                 {{ post.translations | jsonify }}{% endfor %}
            ]
            {% unless categories contains post.category %}
                {% if categories != '' %}
                    {% assign categories = categories | append: ', ' %}
                {% endif %}
                {% assign categories = categories | append: post.category %}
            {% endunless %}
        }{% if count > 200 %}{% break %}{% else %},{% endif %}{% endif %}{% endfor %}
    ],
    categories: {{ categories | split: ', ' | jsonify }}
}
